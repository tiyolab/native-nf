		function getSObjectList(callback){
			$.get(server + 's_objects', function(data, status){
				if(status == 'success'){
					callback(data);
				}else{
					callback(false);
				}
			});
		}
		
		function getSObjectFields(object, callback){
			$.get(server + 's_object_field?o='+object, function(data, status){
				if(status == 'success'){
					TMP_FIELD[object] = data;
					callback(data);
				}else{
					callback(false);
				}
			});
		}
